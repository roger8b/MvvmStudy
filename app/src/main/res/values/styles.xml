<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance" >@style/HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/inputTextStroke</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/inputTextHint</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonDefault" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/defaultButtonBackgroundColor</item>
    </style>

    <style name="TextResult" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/textResult</item>
        <item name="android:textSize">48sp</item>
    </style>

</resources>
